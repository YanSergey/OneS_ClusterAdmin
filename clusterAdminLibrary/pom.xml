	        </properties>
	        <build>
    			<finalName>ru.yanygin.clusterAdminLibrary.macOS-${project.version}</finalName>
            </build>
	    </profile>
	    <profile>
	        <id>windows-x86</id>
	        <activation>
	            <os>
	                <family>windows</family>
	                <arch>x86</arch>
	            </os>
	        </activation>
	        <properties>
	            <artifactId>ru.yanygin.clusterAdminLibrary.windows_x86</artifactId>
	            <swt.artifactId>org.eclipse.swt.win32.win32.x86</swt.artifactId>
	        </properties>
	        <build>
    			<finalName>ru.yanygin.clusterAdminLibrary.windows_x86-${project.version}</finalName>
            </build>
	    </profile>
	    <profile>
	        <id>windows-x86_64</id>
	        <activation>
	        	<activeByDefault>true</activeByDefault>
	            <os>
	                <family>windows</family>
	                <arch>x86_64</arch>
	            </os>
	        </activation>
	        <properties>
	            <artifactId>ru.yanygin.clusterAdminLibrary.windows_x64</artifactId>
	            <swt.artifactId>org.eclipse.swt.win32.win32.x86_64</swt.artifactId>
	        </properties>
	        <build>
    			<finalName>ru.yanygin.clusterAdminLibrary.windows_x64-${project.version}</finalName>
            </build>
	    </profile>
	</profiles>

